{
    "title": "MyLog",
    "description": "我的经验与记录",
    "author": "BoringCat",
    "language": "zh-hans",
    "root": ".",
    "plugins": [
        "highlight",
        "-search",
        "-sharing",
        "-fontsettings",
        "-lunr",
        "theme-default",
        "anchors",
        "-anchor-navigation-ex",
        "expandable-chapters",
        "git-author",
        "image-captions",
        "back-to-top-button"
    ],
    "styles": {
        "website": "./styles/website.css"
    },
    "pluginsConfig": {
        "git-author": {
            "position": "top",
            "modifyTpl": "由 {user} 修改与 {timeStamp}",
            "createTpl": "由 {user} 创建于 {timeStamp}",
            "timeStampFormat": "YYYY-MM-DD HH:mm:ss"
        },
        "image-captions": {
            "caption": "Image - _CAPTION_"
        }
    }

}
